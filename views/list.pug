extends layout

block sidebar
    div= 'Sidebar'

block main
    .Box
        .Box-header
            h2.Box-title= 'Item List'
        hydrated-section
            ul#list
                if items.length
                    each item in items
                        li.Box-row.d-flex.flex-justify-between
                            a(href= '/item/' + item.id)= item.name
                            a.btn.btn-danger.mr-2(type="button" href=`/item/${item.id}/delete`)
                                svg.octicon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16")
                                    path(fill-rule="evenodd" d="M6.5 1.75a.25.25 0 01.25-.25h2.5a.25.25 0 01.25.25V3h-3V1.75zm4.5 0V3h2.25a.75.75 0 010 1.5H2.75a.75.75 0 010-1.5H5V1.75C5 .784 5.784 0 6.75 0h2.5C10.216 0 11 .784 11 1.75zM4.496 6.675a.75.75 0 10-1.492.15l.66 6.6A1.75 1.75 0 005.405 15h5.19c.9 0 1.652-.681 1.741-1.576l.66-6.6a.75.75 0 00-1.492-.149l-.66 6.6a.25.25 0 01-.249.225h-5.19a.25.25 0 01-.249-.225l-.66-6.6z")
                                span='Delete'
                else
                    .blankslate
                        h2.mb-1= 'No items exist'
                        p= 'Items are needed for this list to have content.'
        .Box-footer
            extended-form.d-flex(action="/item" method="POST")
                input.form-control.mr-3.flex-1(type="text" name="name")
                button.btn.btn-primary(type="submit")= 'Add'